<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="2dp"
    android:background="@drawable/item_bg">

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/eventDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Event Description"
        app:layout_constraintTop_toBottomOf="@id/eventTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>  <!-- Added a small margin for spacing -->

    <TextView
        android:id="@+id/eventTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="14.45"
        app:layout_constraintTop_toBottomOf="@id/eventDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnEdit"
        app:layout_constraintBottom_toBottomOf="parent"
        /> <!-- Added a small margin for spacing -->

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:contentDescription="Delete"
        app:layout_constraintTop_toTopOf="@id/eventTime"
        app:layout_constraintBottom_toBottomOf="@id/eventTime"
        app:layout_constraintEnd_toEndOf="parent"
        style="?android:attr/borderlessButtonStyle"/> <!-- Optional: for borderless button style -->

    <ImageButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:contentDescription="Edit"
        app:layout_constraintTop_toTopOf="@id/eventTime"
        app:layout_constraintBottom_toBottomOf="@id/eventTime"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        android:layout_marginEnd="8dp"
        style="?android:attr/borderlessButtonStyle"/> <!-- Optional: for borderless button style -->

</androidx.constraintlayout.widget.ConstraintLayout>